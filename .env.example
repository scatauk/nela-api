# Environment variables for NELA API
# Copy this to .env and configure for your environment

# API Base URL - Used by the frontend to know where to send requests
# For development, leave this unset or use: http://localhost:3000
# For production, set to your production domain, eg. https://nela-api.scata.org.uk
API_BASE_URL=http://localhost:3000

# Debug logging
NELA_DEBUG=true